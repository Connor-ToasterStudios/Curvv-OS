modules = ["c", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AMOS Desktop"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "desktop_env"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AMOS-Desktop-Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AMOS-QEMU-VNC"

[[workflows.workflow]]
name = "AMOS Desktop"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sudo Xvfb :1 -screen 0 1024x768x16 & export DISPLAY=:1 && bash scripts/start_desktop.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "desktop_env"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./scripts/start_desktop.sh"

[[workflows.workflow]]
name = "AMOS-Desktop-Demo"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash AMOS-Desktop/run_demo_replit.sh"

[[workflows.workflow]]
name = "AMOS-QEMU-VNC"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/run_amos_pygame_vnc.sh"

[deployment]
run = ["sh", "-c", "sudo Xvfb :1 -screen 0 1024x768x16 & export DISPLAY=:1 && bash scripts/start_desktop.sh"]
